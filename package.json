{
  "name": "clickup-in-my-vscode",
  "displayName": "ClickUp in my VSCode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "clickup.helloWorld",
        "title": "Hello World",
        "category": "ClickUp"
      },
      {
        "command": "clickup.setToken",
        "title": "Set Token",
        "category": "ClickUp"
      },
      {
        "command": "clickup.getToken",
        "title": "Get Token",
        "category": "ClickUp"
      }
    ],
    "viewsContainers": {
			"activitybar": [
				{
					"id": "clickup",
					"title": "ClickUp",
					"icon": "./resources/activitybar/logo_sidebar.svg"
				}
			]
		},
		"views": {
			"clickup": [
				{
					"id": "tasksViewer",
					"name": "%taskList.name%"
				}
			]
		},
    "menus": {
      "view/title": [
        {
          "command": "clickup.helloWorld",
          "when": "view == tasksViewer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "clickup.js": "^3.0.4"
  }
}
