{
  "name": "clickup-viewer",
  "displayName": "%displayName%",
  "publisher": "Alorse",
  "description": "%description%",
  "repository": "https://github.com/Alorse/clickup-viewer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "clickup.setToken",
        "title": "%setToken.title%",
        "category": "%displayName%"
      },
      {
        "command": "clickup.getToken",
        "title": "%getToken.title%",
        "category": "%displayName%"
      },
      {
        "command": "clickup.refreshSpaces",
        "title": "%refreshSpaces.title%",
        "category": "%displayName%",
        "icon": "$(sync)"
      },
      {
        "command": "clickup.refreshMyTasks",
        "title": "%refreshMyTask.title%",
        "category": "ClickUp",
        "icon": "$(sync)"
      },
      {
        "command": "clickup.openInWeb",
        "title": "%openInWeb.title%",
        "category": "%displayName%",
        "icon": "$(globe)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clickup",
          "title": "%displayName%",
          "icon": "./resources/activitybar/logo_sidebar.svg"
        }
      ]
    },
    "views": {
      "clickup": [
        {
          "id": "spacesViewer",
          "name": "%workspaces.name%"
        },
        {
          "id": "myTasksViewer",
          "name": "%myTasks.name%"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "clickup.refreshSpaces",
          "when": "view == spacesViewer",
          "group": "navigation"
        },
        {
          "command": "clickup.refreshMyTasks",
          "when": "view == myTasksViewer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "clickup.openInWeb",
          "when": "viewItem == taskItem",
          "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.16.5",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "clickup.js": "^3.0.4"
  }
}